<%= simple_form_for @post do |f| %>
  <%= f.input :titre %>
  <%= f.input :description %>
  <%= f.input :published %>
  <%= f.input :published_at %>
  <%= f.hidden_field :author_id, value: current_author.id %>
  <%= f.input :categories, collection: %w(dev ops tech business game) %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>