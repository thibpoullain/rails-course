<h4 class='d-flex justify-content-between'>
  <span>Liste des posts</span>
  <%= link_to 'CrÃ©er un Post', new_post_path, class: 'btn btn-primary' %>
</h4>

<% @posts.each do |post| %>
  <%= link_to post, class: 'text-decoration-none' do %>
    <div class='card mb-3'>
      <div class='card-body mb-1'>
        <h5 class='card-title text-dark'>
        <%= post.titre %>
        </h5>
        <p class='text-dark mb-0'>
          <%= post.published_decorated %>
        </p>
        <p class='text-secondary mt-3'>
          <%= post.description %>
        </p>
        <p class='text-secondary mt-3'>
          <%= post.categories %>
        </p>
      </div>
    </div>
  <%end%>
<% end %>

